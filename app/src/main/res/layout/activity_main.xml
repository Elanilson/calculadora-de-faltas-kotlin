<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editNumeroFaltas"
        android:layout_width="243dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="center"
        android:hint="NÃºmero de faltas"
        android:inputType="numberDecimal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNota4" />

    <EditText
        android:id="@+id/editNota4"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="center"
        android:hint="Nota 4"
        android:inputType="textPersonName"
        android:maxLength="2"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNota2" />

    <EditText
        android:id="@+id/editNota2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="center"
        android:hint="Nota 2"
        android:inputType="numberDecimal"
        android:maxLength="2"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNota1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="104dp"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="center"
        android:hint="Nota 1"
        android:inputType="number|numberDecimal"
        android:maxLength="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNota3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="center"
        android:hint="Nota 3"
        android:inputType="number|numberDecimal"
        android:maxLength="2"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNota1" />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:text="Calcular"
        app:backgroundTint="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="@+id/editNumeroFaltas"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/editNumeroFaltas"
        app:layout_constraintTop_toBottomOf="@+id/editNumeroFaltas" />

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Resultado:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalcular" />
</androidx.constraintlayout.widget.ConstraintLayout>